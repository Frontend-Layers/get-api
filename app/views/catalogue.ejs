<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Get API</title>

  <meta name="robots" content="noindex, nofollow">

  <!-- Bootstrap 5 Styles -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- font-awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>

  <div class="container pt-5">
    <header class="pb-3">
      <h1>API Catalogue</h1>

      <ul>
        <li><a href="./index.html">Index</a></li>
        <li><a href="./catalogue.html">Catalogue</a></li>
      </ul>

    </header>

    <% for (let category in data) { %>
    <h2><%= category %></h2>

    <div class="category-content">

      <% for (let apiName in data[category]) { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><a href="<%= data[category][apiName].doc %>" target="_blank"><%= apiName %></a></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= data[category][apiName].dsc %>
          </h6>
          <% if (data[category][apiName].limit) { %>
          <p class="card-text">
            <i class="fas fa-exclamation-triangle"></i> <%= data[category][apiName].limit %>
          </p>
          <% } %>
          <% if (data[category][apiName].url) { %>
          <p class="card-text">
            Service URL: <%= data[category][apiName].url %>
          </p>
          <% } %>
          <% if (data[category][apiName].url) { %>
          <p class="card-text">
            Service Key: <%= data[category][apiName].key %>
          </p>
          <% } %>
          <div>
            <% if (data[category][apiName].features && data[category][apiName].features.length > 0) { %>
            <% data[category][apiName].features.forEach(feature => { %>
            <span class="badge text-bg-light"><%= feature %></span>
            <% }); %>
          </div>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>

  </div>

  <footer class="footer">
    <div class="container">
      <hr>
      <p class="copy" data-get-footer="@frontend-layers/get-api, modern">MIT ðŸ“¦ @frontend-layers/get-api</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/get-footer"></script>
</body>

</html>